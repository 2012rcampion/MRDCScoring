extends layout

block append head
  script(src='/static/jquery-1.11.1.js')
  script(src='/static/jquery-ui.js')
  script(src='/static/games.js')

block pageTitle
  h1 Games

block pageContent
  ul
    each game in games
      li= JSON.stringify(game)
        h3 Teams
        ul
          each team in game.teams
            li= teamsMap[team].name
              form(action='/api/games/'+game._id+'/teams/'+team._id method='DELETE')
            | Name:
            input(name='name' value=team.name)
            br
            | School:
            input(name='school' value=team.school)
            br
            input(type='submit' value='Edit')
        if game._id == current
          p current game
  h2 Teams List
  ul
    each team in teams
      li= JSON.stringify(team)
